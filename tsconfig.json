{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {}
  },
  "compilerOptions": {
    "lib": ["es2023"],
    "outDir": "./dist",
    "module": "node16",
    "removeComments": true,
    "target": "es2022",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "paths": {},
    "sourceMap": true,
    "sourceRoot": "/src",
    "strict": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
