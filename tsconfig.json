{
 
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {}
  },
  "compilerOptions": {
    "lib": ["es2023"],
    "outDir": "dist",
    "module": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "es2022",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "paths": {},
    "sourceMap": true,
    "sourceRoot": "/src",
    "strict": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],

  "exclude": ["node_modules", "dist"]
}
